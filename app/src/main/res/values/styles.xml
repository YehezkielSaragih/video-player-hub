<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme utama aplikasi -->
    <style name="Theme.VideoPlayerHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
    </style>

    <!-- Theme khusus Splash Screen -->
    <style name="Theme.VideoPlayerHub.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>
